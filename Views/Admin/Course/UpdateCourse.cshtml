@model Course
@{
    ViewData["Title"] = "Admin | Update Course";
    ViewData["ReportsActive"] = "";
    ViewData["StudentsActive"] = "";
    ViewData["InstructorsActive"] = "";
    ViewData["CoursesActive"] = "active";
    ViewData["LogOutActive"] = "";
}




            <form asp-action="UpdateCourse" asp-controller="Admin" method="post">
                <h1 class="main-title">Update Course</h1>
                <input type="hidden" name="courseId" value="@Model.CourseId" />
                <div class="form-group">
                    <label for="Name">Enter Course Name:</label>
                    <input type="text" name="name" class="form-control" placeholder="Enter Course Name" value="@Model.CourseName" required />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label for="passDegree">PassDegree:</label>
                    <input type="number" name="passDegree" class="form-control" placeholder="Enter Pass Degree" value="@Model.PassDegree" required />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label for="Topics">Course Topics:</label>
                    <textarea name="topic" class="form-control" placeholder="Enter topics" >
                          @foreach (var topic in Model.Topics)
                        {
                        @topic.TopicName ; 
                        }
                        </textarea>
                    <span class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label for="track">Assign To Tracks:</label>
                    <select name="selectedTracks" class="form-control" multiple>
                        @foreach (var track in (List<Track>)ViewData["AllTracks"])
                        {
                            <option value="@track.TrackId">@track.TrackName</option>
                        }
                    </select>
                    <span class="text-danger"></span>
                </div>
                <div asp-validation-summary="All" class="text-danger alert-danger"></div>
                <button type="submit" class="btn btn-custom">Update</button>
            </form>
