@model Student
@{
    Layout = null;
    Track tr = ViewBag.track;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowCourses</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://kit.fontawesome.com/d3bc0f0f7a.js" crossorigin="anonymous"></script> 
    <style>
        .header{
            padding: 8px 8%;
            background-color: darkred;
        }
        .logo{
            width:7%;
        }

        .studentImg{
            width:300px;
            height:300px;
            object-fit: cover;
        }

        .course {
            position: relative;
            height: 450px;
            font-family: sans-serif;
            letter-spacing: 4px;
            font-weight:bolder;
        }

        .course::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('/Images/iti.jpg');
            background-size: cover;
            background-position: center bottom;
            background-repeat: no-repeat;
            filter: blur(2px);
            z-index: -1; 
        }

        .logoAndP{
            font-family: sans-serif;
        }

        .grayColor{
            color: lightgray;
        }
    </style>
</head>
<body>

    <!--Student Info -->
    <section class="text-center mt-5 mb-5 w-50 m-auto">
     
        <h1>@Model.StudentFname @Model.StudentLname</h1>
        @if (tr.TrackName != null)
        {
            <p><span class="text-warning">@tr.TrackName</span> Track</p>
            <p> Supervisor: @tr.Supervisor.InstructorFname</p>
        }
    </section>

    <section class="my-5 w-50 m-auto">
        @foreach (var item in Model.StudentCourses)
        {
            foreach (var exam in @item.Course.Exams)
            {
                <div class="mb-3 shadow-lg bg-light rounded p-4 ">
                    <div>
                    <h3>Course Name: @item.Course.CourseName</h3>
                    <h5>Exam ID: @exam.ExamId</h5>
                    <p>The Exam duration of this course is: @exam.Duration</p>
                        <a asp-action="GenerateQuestions" asp-controller="Student" asp-route-stdID="@item.StudentId" asp-route-CrsId="@item.Course.CourseId" asp-route-ExamId="@exam.ExamId"  class="btn btn-primary text-light">Go to Exam</a>
                </div>
            </div>
            }
        }
    </section>
    
</body>
</html>