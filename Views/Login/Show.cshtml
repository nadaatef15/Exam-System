
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login Form</title>

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="my-5">

    <img src="~/images/arc.svg" />
<div class="container">
    <div class="row gap-1 align-items-center justify-content-around">
            <div class="col-md-5 col-lg-4">
 
        <div class="w-100 image-Container" >
                <img class="w-100" src="~/images/Online test-bro.svg" />
        </div>
      
    </div>
            <div class="form-container col-md-7 col-lg-6">
            <form asp-controller="Login" asp-action="Login" method="post">
                    <h1 class="text-center main-title">Login Page</h1>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" name="email" class="form-control" placeholder="Enter Your Email" required />
                    <span  class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label for="password">Password:</label>
                    <input type="password" name="password" class="form-control" placeholder="Enter Your Password" required />
                    <span  class="text-danger"></span>
                </div>
                    <div asp-validation-summary="All" class="text-danger alert-danger"></div>
                <button type="submit" class="btn btn-custom">Login</button>
             
            </form>

    </div>
        </div>
</div>
    <img class="star-shape" src="~/images/star.svg" />
</body>
</html>
