<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/admin.css" rel="stylesheet" />
</head>
<body>

    <div class="page-container d-flex ">
        <aside>
            <h1>Admin Control</h1>
            <ul>
                <li><a href="#" class="@ViewData["ReportsActive"]">Reports</a></li>
                <li><a href="#" class="@ViewData["StudentsActive"]">Students</a></li>
                <li><a href="#" class="@ViewData["InstructorsActive"]">Instructors</a></li>
                <li><a  asp-controller="Admin" asp-action="AllCourses" class="@ViewData["CoursesActive"]">Courses</a></li>
                <li><a  asp-controller="Account" asp-action="Logout" class="@ViewData["LogOutActive"]">LogOut</a></li>
            </ul>
            <img class="circle" src="~/images/circles.png" />
        </aside>
        <div class="dynamic-section">
            @RenderBody()
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    @RenderSection("scripts", required: false)

</body>
</html>
