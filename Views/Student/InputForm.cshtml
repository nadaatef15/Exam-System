@model Student
@{
    var Tracks = ViewBag.Tracks as List<Track>;
    SelectList TrackList = new SelectList(Tracks, "TrackId", "TrackName");
}

<div class="form-group">
    <label asp-for="StudentFname">First Name</label>
    <input asp-for="StudentFname" class="form-control custom-input" value="@Model?.StudentFname" />
    <span asp-validation-for="StudentFname" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="StudentLname">Last Name</label>
    <input asp-for="StudentLname" class="form-control custom-input" value="@Model?.StudentLname" />
    <span asp-validation-for="StudentLname" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="StudentPassword">Password</label>
    <input asp-for="StudentPassword" class="form-control custom-input" value="@Model?.StudentPassword" />
    <span asp-validation-for="StudentPassword" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="StudentGender">Gender</label>
    <select asp-for="StudentGender" class="form-control">
        <option value="">Select Gender</option>
        <option value="male">Male</option>
        <option value="female">Female</option>
    </select>
    <span asp-validation-for="StudentGender" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="TrackId">Department</label>
    <select asp-for="TrackId" asp-items="TrackList" class="form-control">
        <option value="">Select</option>
    </select>
    <span asp-validation-for="TrackId" class="text-danger"></span>
</div>
@if (ViewBag.CapacityError != null)
{
    <div class="alert alert-danger">@ViewBag.CapacityError</div>
}
<button type="submit" class="btn custom-btn">Add</button>
