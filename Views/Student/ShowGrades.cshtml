@model IEnumerable<StudentCourse>
@{
    Layout = "_Layout";
    var std = ViewBag.stdData as Student;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowGrades</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <div class="alert alert-success">
            <strong>Student:</strong> @std.StudentId - @std.StudentFname - @std.Track.TrackName
        </div>

        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Course Name</th>
                    <th>Grade</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Course.CourseName</td>
                            <td>
                                @if(@item.Grade==null)
                                {
                                    <span>You have yet to sit for the exam in this course</span>
                                }
                                else
                                {
                                    @item.Grade
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td>No Courses Assign To This Student</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <a asp-action="Index" asp-controller="Student" class="btn btn-secondary">Cancel</a>
</body>
</html>
