@model IEnumerable<Student>
@{
    ViewData["Title"] = "Admin | All Students";
    ViewData["ReportsActive"] = "";
    ViewData["StudentsActive"] = "active";
    ViewData["InstructorsActive"] = "";
    ViewData["CoursesActive"] = "";
    ViewData["LogOutActive"] = "";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    
</head>
<body>
   
        <a class="btn btn-custom mb-3" asp-action="Add" asp-controller="StudentAdmin"><i class="fas fa-user-plus"></i> Add Student</a>
        <table class="table table-bordered table-responsive">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Gender</th>
                    <th>Track</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="8">No students found</td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.StudentId</td>
                            <td>@item.StudentFname</td>
                            <td>@item.StudentLname</td>
                            <td>@item.StudentEmail</td>
                            <td>@item.StudentPassword</td>
                            <td>@item.StudentGender</td>
                            <td>@item.Track.TrackName</td>
                            <td>
                                <a class="btn btn-primary btn-action rounded-circle" asp-action="Edit" asp-controller="StudentAdmin" asp-route-id="@item.StudentId"><i class="fas fa-edit"></i> </a>
                                <a class="btn btn-danger btn-action rounded-circle" asp-action="Delete" asp-controller="StudentAdmin" asp-route-id="@item.StudentId" onclick="return confirm('Are you sure you want to delete this student?')"><i class="fas fa-trash"></i> </a>
                                <a class="btn btn-info btn-action rounded-circle" asp-action="ManageCourses" asp-controller="StudentAdmin" asp-route-id="@item.StudentId"><i class="fas fa-book"></i> </a>
                                <a class="btn btn-info btn-action rounded-circle" asp-action="ShowGrades" asp-controller="StudentAdmin" asp-route-id="@item.StudentId"><i class="fas fa-graduation-cap"></i>   </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>




</body>
</html>
