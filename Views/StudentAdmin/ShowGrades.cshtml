@model IEnumerable<StudentCourse>
@{
    var std = ViewBag.stdData as Student;

    ViewData["Title"] = "Admin | Student Grades";
    ViewData["ReportsActive"] = "";
    ViewData["StudentsActive"] = "active";
    ViewData["InstructorsActive"] = "";
    ViewData["CoursesActive"] = "";
    ViewData["LogOutActive"] = "";
}


        <h1 class="text-center main-title">Grades</h1>
        <div class="alert alert-success">
            <strong>Student:</strong> @std.StudentId - @std.StudentFname - @std.Track.TrackName
        </div>

        <table class="table table-bordered table-responsive">
            <thead class="thead-dark">
                <tr>
                    <th>Course Name</th>
                    <th>Grade</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Course.CourseName</td>
                            <td>
                                @if(@item.Grade==null)
                                {
                                    <span>You have yet to sit for the exam in this course</span>
                                }
                                else
                                {
                                    @item.Grade
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td>No Courses Assign To This Student</td>
                    </tr>
                }

            </tbody>
        </table>
    <a asp-action="Index" asp-controller="StudentAdmin" class="btn btn-custom">Cancel</a>

